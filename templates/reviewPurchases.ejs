<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Review Purchases</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="page-container wide">
        <div class="page-header">
            <h1>Review Your Previous Purchases</h1>
        </div>
        
        <% if (error) { %>
            <div class="error-message">
                <p><%= error %></p>
            </div>
        <% } %>
        
        <% if (purchases && purchases.length > 0) { %>
            <div class="content-card" style="overflow-x: auto;">
                <table class="styled-table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Medicine</th>
                            <th>Quantity</th>
                            <th>Symptoms</th>
                            <th>Submitted At</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% purchases.forEach(purchase => { %>
                            <tr>
                                <td><%= purchase.name %></td>
                                <td><%= purchase.email %></td>
                                <td><%= purchase.medicine %></td>
                                <td><%= purchase.quant %></td>
                                <td><%= purchase.symptoms %></td>
                                <td><%= purchase.submittedAt.toLocaleString() %></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <div class="content-card">
                <div class="empty-state">
                    <p>No purchases found.</p>
                </div>
            </div>
        <% } %>
        
        <a href="/" class="nav-link">‚Üê Back to Home</a>
    </div>

    <footer class="home-footer">
        <div class="footer-content">
            <p>CMSC335 Final Project</p>
        </div>
    </footer>
</body>
</html>

